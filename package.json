{
  "name": "habits",
  "version": "1.0.0",
  "description": "Tool to calculate the Solidity Interface ID",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "postinstall": "npx husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "build": "tsc --build .",
    "test": "mocha --recursive 'test/**/*.ts' --exit",
    "coverage": "nyc mocha --recursive 'test/**/*.ts' --exit",
    "lint-fix": "prettier --write \"./**/*.ts\"",
    "publish-to-npm": "npm run compile && npm run lint-fix && npm publish ./ --access public"
  },
  "keywords": [
    "Solidity",
    "ABI"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TBD.git"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "author": "Distributed Lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TBD/issues"
  },
  "homepage": "https://github.com/TBD#readme",
  "dependencies": {
    "ethers": "^6.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^8.1.0",
    "typescript": "^5.2.2"
  },
  "nyc": {
    "reporter": [
      "html",
      "text"
    ]
  }
}
