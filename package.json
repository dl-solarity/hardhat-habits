{
  "name": "@solarity/hardhat-habits",
  "version": "1.0.0",
  "description": "The tool designed to simplify working with Ethereum ABI.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "postinstall": "npx husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "build": "tsc --build .",
    "compile": "npm run prepare-tests && npm run build",
    "prepare-tests": "npm run compile --workspaces",
    "test": "mocha --recursive 'test/**/*.ts' --exit",
    "coverage": "nyc mocha --recursive 'test/**/*.ts' --exit",
    "clean-tests": "npm run clean --workspaces",
    "lint-fix": "prettier --write \"./**/*.ts\"",
    "publish-to-npm": "npm run compile && npm run lint-fix && npm publish ./ --access public"
  },
  "workspaces": [
    "test/fixture-projects/*"
  ],
  "keywords": [
    "solidity",
    "ABI",
    "smart-contracts",
    "hardhat",
    "distributedlab",
    "solarity"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dl-solarity/hardhat-habits.git"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "author": "Distributed Lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dl-solarity/hardhat-habits/issues"
  },
  "homepage": "https://github.com/dl-solarity/hardhat-habits#readme",
  "dependencies": {
    "solidity-ast": "^0.4.55"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "ethers": "^6.9.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^8.1.0",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "nyc": {
    "reporter": [
      "html",
      "text"
    ]
  }
}
